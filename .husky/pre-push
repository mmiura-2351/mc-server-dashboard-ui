#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-push CI checks..."

# Run formatting check
echo "ğŸ“‹ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Formatting check failed! Run 'npm run format' to fix."
  exit 1
fi

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Run 'npm run lint:fix' to fix auto-fixable issues."
  exit 1
fi

# Run type checking
echo "ğŸ” Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed! Fix TypeScript errors before pushing."
  exit 1
fi

# Optional: Run tests (can be slow for large test suites)
# Uncomment the following lines if you want to run tests before pushing
# echo "ğŸ§ª Running tests..."
# npm test
# if [ $? -ne 0 ]; then
#   echo "âŒ Tests failed! Fix failing tests before pushing."
#   exit 1
# fi

echo "âœ… All pre-push checks passed!"