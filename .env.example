# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: Custom configuration
NEXT_PUBLIC_APP_NAME=MC Server Dashboard
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Development settings
NODE_ENV=development

# Runtime environment override (prevents HTTPS forcing in HTTP deployments)
NEXT_RUNTIME_ENV=development

# Security Configuration (production settings)
# Enable HTTPS redirect (only set to 'true' if you have HTTPS configured)
ENABLE_HTTPS_REDIRECT=false

# HTTPS hostname for redirects (only needed if ENABLE_HTTPS_REDIRECT=true)
HTTPS_HOSTNAME=localhost:3000

# Enhanced security headers (set to 'true' for high-security environments)
ENABLE_ENHANCED_SECURITY=false