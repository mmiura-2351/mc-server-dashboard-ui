#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged (auto-fix linting and formatting issues for staged files)
echo "ğŸ“‹ Running lint-staged (ESLint + Prettier)..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix the issues and try again."
  exit 1
fi

# Run type check (must check entire project for type consistency)
echo "ğŸ” Running TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type check failed. Please fix type errors before committing."
  exit 1
fi

# Run tests (check if any changes break existing functionality)
echo "ğŸ§ª Running tests..."
npm test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
